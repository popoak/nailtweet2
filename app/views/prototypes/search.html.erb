<main class="main">
  <div class="inner">
    <%= form_with(url: search_prototypes_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="photos-wrapper">
      <div class="image-container">
        <% @prototypes.each do |prototype| %>
          <div class="search-result">
            <%= link_to prototype_path(prototype) do %>
              <%= image_tag prototype.image, alt: prototype.title, class: 'search-result-image' %>
            <% end %>
            <div class="search-result-info">
              <h3 class="search-result-title"><%= prototype.title %></h3>
              <p class="search-result-catch-copy"><%= prototype.catch_copy %></p>
              <p class="search-result-price">価格: <%= prototype.price %> 円</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
  

