<% @prototypes.each do |prototype| %>
  <div class="card">
    <%= image_tag prototype.image, class: 'card__image' %> 
    <div class="card__body">
      <%= link_to prototype.catch_copy, prototype_path(prototype), class: :card__title %>
      <p class="card__summary">
        <%= prototype.title %>
      </p>
      <p class="card__price">
        価格: <%= prototype.price %> 円
      </p>
      <span class="name">
        <%= link_to "by#{prototype.user.name}", user_path(prototype.user), class: :card__user %>
      </span>
    </div>
  </div>
<% end %>